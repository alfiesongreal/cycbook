                <view style="width:100%;height:100%" bindtap="toDetails">
                    <image src="{{DuringBg}}" style="width:100%;height:100%;" class="index-image"></image>
                </view>
            </block>
            <block wx:else>
                <view class="bl-bgcolor" style="width:100%;height:100%;" bindtap="toDetails">
