  .txt-box
    display:flex;
    height:100%;
    justify-content: center;
    align-items: center;
    z-index:2;
    position:relative;

    .txt-item
      animation: itemsin 2s ease-in;

    @keyframes itemsin {
      from{
        opacity:0
      }
      to{
        opacity:1
      }
    }